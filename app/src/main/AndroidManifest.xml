<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamultron.finalproject.battlenole"
    >

    <uses-sdk
        android:minSdkVersion="17" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameActivity"
            android:label="GameMode" />
        <activity android:name=".HowToActivity" />
        <activity
            android:name=".NumberConf"
            android:label="@string/title_activity_number_conf" >
        </activity>
        <uses-permission android:name="android.permission.SEND_SMS" />
        <!-- Make sure that this is actually what you need in the Manifest -->
        <receiver
            android:name=".SMSIncomingHandler"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter android:priority="2">
                <action android:name="android.provider.Telephony.SMS_RECEIVED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
